<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserStatisticsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/easy_flashcards_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Easy flashcards learned: " />

        <TextView
            android:id="@+id/medium_flashcards_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium flashcards learned: " />

        <TextView
            android:id="@+id/hard_flashcards_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hard flashcards learned: " />
    </LinearLayout>
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/red_button"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Back"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/backButton"
        app:layout_constraintEnd_toEndOf="@+id/backButton"
        app:layout_constraintStart_toStartOf="@+id/backButton"
        app:layout_constraintTop_toTopOf="@+id/backButton" />
</androidx.constraintlayout.widget.ConstraintLayout>